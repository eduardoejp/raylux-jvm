(import: java/lang/String)

...
... Color
...

(import: com/raylib/Raylib$Color
  ["c/Color::[0]"
   (r [] byte)
   (g [] byte)
   (b [] byte)
   (a [] byte)])

(import: com/raylib/Jaylib$Color
  ["java/Color::[0]"
   (new [int int int int])])

(type: .public Color
  com/raylib/Jaylib$Color)

(def: .public (color r g b a)
  (-> Nat Nat Nat Nat Color)
  (java/Color::new (.int r) (.int g) (.int b) (.int a)))

(template [<name> <method>]
  [(def: .public (<name> it)
     (-> Color Nat)
     (.nat (<method> it)))]

  [r c/Color::r]
  [g c/Color::g]
  [b c/Color::b]
  [a c/Color::a]
  )

...
... Colors
...

(def: .public LIGHTGRAY
  Color
  (color 200 200 200 255))

(def: .public RAYWHITE
  Color
  (color 245 245 245 255))

...
... Vector3
...

(import: com/raylib/Raylib$Vector3
  ["c/Vector3::[0]"
   (x [] float)
   (y [] float)
   (z [] float)])

(import: com/raylib/Jaylib$Vector3
  ["java/Vector3::[0]"
   (new [float float float])])

(type: .public Vector3
  com/raylib/Jaylib$Vector3)

(def: .public (vector x y z)
  (-> Frac Frac Frac Vector3)
  (java/Vector3::new x y z))

(def: .public (x it)
  (-> Vector3 Frac)
  (c/Vector3::x it))

(def: .public (y it)
  (-> Vector3 Frac)
  (c/Vector3::y it))

(def: .public (z it)
  (-> Vector3 Frac)
  (c/Vector3::z it))

