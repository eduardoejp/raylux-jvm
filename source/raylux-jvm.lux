... Core
...

(import: com/raylib/Raylib
  ["Raylib/Core::[0]"
   ... window handling
   ("static" InitWindow [int int java/lang/String] void)
   ("static" WindowShouldClose [] boolean)
   ("static" CloseWindow [] void)
   
   ... fps
   ("static" SetTargetFPS [int] void)

   ... drawing
   ("static" BeginDrawing [] void)
   ("static" EndDrawing [] void)
   ("static" DrawText [java/lang/String int int int com/raylib/Raylib$Color] void)])

(def: .public (InitWindow w h title)
  (-> Nat Nat Text Any)
  (Raylib/Core::InitWindow (.int w) (.int h) title))

(def: .public (WindowShouldClose _)
  (-> Any Bit)
  (Raylib/Core::WindowShouldClose))

(def: .public (CloseWindow _)
  (-> Any Any)
  (Raylib/Core::CloseWindow))

(def: .public (SetTargetFPS fps)
  (-> Nat Any)
  (Raylib/Core::SetTargetFPS (.int fps)))

(def: .public (BeginDrawing _)
  (-> Any Any)
  (Raylib/Core::BeginDrawing))

(def: .public (EndDrawing _)
  (-> Any Any)
  (Raylib/Core::EndDrawing))

(def: .public (DrawText text x y size color)
  (-> Text Nat Nat Nat Color Any)
  (Raylib/Core::DrawText text (.int x) (.int y) (.int size) color))
